{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MonolithLauncher",
  "version": "0.1.0",
  "identifier": "com.monolith.launcher",
  "build": {
    "frontendDist": "../monolith-ui/out"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Monolith Launcher",
        "width": 1340,
        "height": 760,
        "minWidth": 980,
        "minHeight": 640,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico",
      "icons/icon.icns"
    ]
  }
}
